{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "jsRules": true,
  "rules": {
    "prettier": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "no-console": { "severity": "warning" },
    "object-literal-sort-keys": [false],
    "ordered-imports": true
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["./dist/**", "test/**"]
  }
}
