{
  "name": "jparticles",
  "description": "A succinct, efficient, and lightweight Canvas library for building some cool particle effects.",
  "version": "2.1.0",
  "main": "dist/jparticles.all.js",
  "scripts": {
    "dev": "webpack-dev-server --color",
    "build": "gulp --gulpfile ./bin/gulpfile.build.js",
    "test": "yarn test:unit",
    "test:unit": "nyc ava --verbose",
    "test:e2e": "testcafe chrome test/e2e/*.ts --speed 0.7",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --fix",
    "publish": "./bin/npm-publish.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "html-webpack-plugin": "^4.2.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "ts-loader": "^7.0.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.0-dev.20200419",
    "webpack": "^5.0.0-beta.14",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "author": "Barrior",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Barrior/JParticles.git"
  },
  "bugs": {
    "url": "https://github.com/Barrior/JParticles/issues"
  },
  "homepage": "jparticles.js.org",
  "keywords": [
    "JParticles",
    "Particles",
    "Particle effects"
  ]
}
