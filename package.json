{
  "name": "jparticles",
  "description": "A succinct, efficient, and lightweight Canvas library for building some cool particle effects.",
  "version": "2.1.0",
  "main": "dist/jparticles.all.js",
  "scripts": {
    "dev": "webpack-dev-server --color",
    "build": "gulp --gulpfile ./bin/gulpfile.build.js",
    "test": "yarn test:unit",
    "test:unit": "nyc ava --verbose",
    "test:e2e": "testcafe chrome test/e2e/*.ts --speed 0.7",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "publish": "./bin/npm-publish.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unused-imports": "^0.1.3",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "author": "Barrior",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Barrior/JParticles.git"
  },
  "bugs": {
    "url": "https://github.com/Barrior/JParticles/issues"
  },
  "homepage": "jparticles.js.org",
  "keywords": [
    "JParticles",
    "Particles",
    "Particle effects"
  ]
}
